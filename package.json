{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "companion",
  "title": "Companion",
  "description": "A random assortment of utility commands.",
  "author": "robbiehobby",
  "license": "MIT",
  "icon": "extension-icon.png",
  "scripts": {
    "dev": "ray develop",
    "build": "ray build && rsync -rti ~/.config/raycast/extensions/companion/ public"
  },
  "devDependencies": {
    "@types/node": "^22.15.2",
    "@types/react": "^19.1.2"
  },
  "dependencies": {
    "@raycast/api": "^1.96.1",
    "@raycast/utils": "^1.19.1",
    "chrono-node": "^2.8.0",
    "dayjs": "^1.11.13",
    "execa": "^9.5.2",
    "typescript": "^5.8.3"
  },
  "commands": [
    {
      "name": "datetime",
      "title": "Dates & Times",
      "description": "Transform dates using natural language.",
      "mode": "view",
      "icon": "extension-icon.png"
    },
    {
      "name": "orb",
      "title": "Menu Bar OrbStack",
      "description": "Show the current OrbStack data location in the menu bar.",
      "mode": "menu-bar",
      "interval": "10s"
    },
    {
      "name": "transform",
      "title": "Transform Text",
      "description": "Transform the selected text.",
      "mode": "view",
      "icon": "extension-icon.png"
    },
    {
      "name": "wifi",
      "title": "Menu Bar Wi-Fi",
      "description": "Show the current Wi-Fi SSID in the menu bar.",
      "mode": "menu-bar",
      "interval": "10s"
    }
  ]
}
